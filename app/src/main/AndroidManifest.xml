<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.FitnessCoach"
        tools:targetApi="31">
        <activity
            android:name=".activities.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_main" />
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.RegistroActivity"
            android:exported="false"></activity>
        <activity
            android:name=".activities.InicioActivity"
            android:exported="false"></activity>
        <activity
            android:name=".activities.EjerciciosAdapter"
            android:exported="false"></activity>
        <activity
            android:name=".activities.Recycler"
            android:exported="false"></activity>
        <activity android:name=".activities.RecyclerFragment" />
    </application>

</manifest>