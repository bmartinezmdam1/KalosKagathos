<!-- res/layout/ajustes.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nombreUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"/>

    <ImageView
        android:layout_below="@+id/nombreUser"
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="111dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/sampleusericon" />

    <Button
        android:id="@+id/cambiarFoto"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="@string/cambiarFoto"
        android:layout_below="@id/imageView2"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/ActivarNotificaciones"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="@string/ActivarNotificaciones"
        android:layout_below="@id/cambiarFoto"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
