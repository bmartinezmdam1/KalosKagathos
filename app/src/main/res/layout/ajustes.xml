<!-- res/layout/ajustes.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="70dp"
        android:id="@+id/Bienvenido"
        android:text="@string/Bienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:textSize="35sp"
        android:textStyle="bold"
        android:fontFamily="@font/greek_freak"/>

    <ImageView
        android:layout_marginTop="1dp"
        android:layout_below="@+id/Bienvenido"
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="111dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/sampleusericon" />

    <Button
        android:id="@+id/BorrarDatos"
        style="@style/ButtonStyle"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/greek_freak"
        android:text="@string/BorrarDatos" />

    <Button
        android:id="@+id/CambiarDatos"
        style="@style/ButtonStyle"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/BorrarDatos"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="onViewCreated"
        android:text="@string/Update"
        android:fontFamily="@font/greek_freak"/>

    <Button
        android:id="@+id/MostrarDatos"
        style="@style/ButtonStyle"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/CambiarDatos"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/greek_freak"
        android:onClick="onViewCreated"
        android:text="@string/Read" />

    <Button
        android:id="@+id/cambiarFoto"
        style="@style/ButtonStyle"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/MostrarDatos"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/greek_freak"
        android:text="@string/cambiarFoto" />
    <EditText
        android:layout_marginTop="10dp"
        android:hint="@string/NuevoNombre"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/NombreUser"
        android:layout_below="@+id/cambiarFoto"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/black"
        android:fontFamily="@font/greek_freak"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/editContrasena"
        android:hint="@string/nuevaContraseÃ±a"
        android:layout_below="@+id/NombreUser"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/greek_freak"/>

</RelativeLayout>
